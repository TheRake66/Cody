{
    "security": {
        "only_https": false,
        "prevent_self_xss": false,
		"cookies": {
			"path": "/",
			"domain": "www.{PROJECT_NAME}.com",
			"only_https": false,
			"prevent_xss": false,
			"lifetime": 0
		}
    },
    "render": {
        "use_minifying": false,
        "wait_dom_loaded": true,
        "delay_after_load": 200,
		"error": {
			"catch": true, 
			"format_message": true
		},
		"debug": {
			"supervisor": true,
			"border_component": false
		},
		"api": {
			"beautify_json": true
		}
    },
    "log": {
        "use_file": true,
        "ip_identify": false,
        "throw_if_unwritable": true,
        "max_lenght": 1000,
		"query": {
			"enabled": true,
			"parameters": true,
			"results": true
		},
		"mail": {
			"enabled": true,
			"header": true,
			"content": true
		}
    },
    "website": {
        "charset": "utf-8",
        "title": "{PROJECT_NAME}",
        "description": "{PROJECT_NAME}",
        "keywords": "{PROJECT_NAME}",
        "author": "{USER_NAME}",
        "viewport": "width=device-width, initial-scale=1.0",
        "theme_color": "#3B78FF",
        "robots": "index, follow",
        "favicon": "favicon.ico",
		"opengraph": {			
			"title": "{PROJECT_NAME}",
			"description": "{PROJECT_NAME}",
			"url": "https://www.{PROJECT_NAME}.com",
			"type": "website",
			"locale": "fr_FR",
			"site_name": "{PROJECT_NAME}",
			"image": {
				"secure_url": "",
				"url": "",
				"type": "image/png",
				"width": "512",
				"height": "512",
				"alt": ""
			}
		},
		"http": {
			"cache": "public, max-age=31536000",
			"cache_control": "public, max-age=31536000",
			"pragma": "public, max-age=31536000",
			"expires": 31536000,
			"refresh": {
				"enabled": false,
				"delay": 0,
				"url": ""
			}
		}
    },
    "region": {
        "timezone": "Europe/Paris",
        "main_lang": "fr"
    },
    "session": {
        "openning": true,
        "multiple": true,
        "name": "{PROJECT_NAME}",
        "token_lifetime_days": 31,
		"regenerate": {
			"delay": -1,
			"delete_old": false
		}
    },
    "database": {
        "default": "{PROJECT_NAME}",
        "progressive": true,
        "list": [
            {
				"login": "root", 
				"password": "", 
				"host": "localhost", 
				"port": "3306", 
				"name": "{PROJECT_NAME}", 
                "encoding": "utf8", 
                "type": "mysql",
				"options": {
					"throw_sql_error": true,
					"throw_transaction": true,
					"emulate_prepare": false,
					"persistent_mode": false
				}
            }
        ]
    }
}