{
    "security": {
        "redirect_to_https": false,
        "token_path": "/",
        "token_domain": "www.{PROJECT_NAME}.com",
        "token_only_https": false,
        "token_prevent_xss": true
    },
    "render": {
        "use_minifying": false,
        "catch_error": true, 
        "show_error_message": true,
        "show_supervisor": true,
        "wait_dom_loaded": true,
        "delay_after_load": 200
    },
    "log": {
        "use_log_file": true,
        "ip_identify": false,
        "max_lenght": 1000,
        "query": {
            "print_query": true,
            "print_parameters": true,
            "print_results": true,
            "print_mail": true,
            "print_mail_header": true,
            "print_mail_content": true
        }
    },
    "website_head": {
        "charset": "utf-8",
        "description": "{PROJECT_NAME}",
        "keywords": "{PROJECT_NAME}",
        "author": "{USER_NAME}",
        "viewport": "width=device-width, initial-scale=1.0",
        "theme_color": "#3B78FF",
        "title": "{PROJECT_NAME}"
    },
    "region": {
        "timezone": "Europe/Paris",
        "main_lang": "fr"
    },
    "session": {
        "open_session": true,
        "multiple_session": true,
        "session_name": "{PROJECT_NAME}"
    },
    "database": {
        "default_database": "{PROJECT_NAME}",
        "progressive_connection": true,
        "databases_list": [
            {
				"login": "root", 
				"password": "", 
				"host": "localhost", 
				"port": "3306", 
				"name": "{PROJECT_NAME}", 
                "encoding": "utf8", 
                "type": "mysql",
                "throw_sql_error": true,
                "throw_transaction": true,
                "emulate_prepare": false,
                "persistent_mode": false
            }
        ]
    }
}